{
  "env": {
    "es6": true,
    "mocha": true,
    "browser": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "rules": {
    "semi": [ "error", "always" ],
    "no-console": 0,
    "no-fallthrough": 0,
    "no-prototype-builtins": 0
  }
}
